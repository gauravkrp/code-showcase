{
  "plugins": [
    "postcss-flexbugs-fixes",
    [
      "@fullhuman/postcss-purgecss",
      {
        "content": ["./src/**/*", "./src/**/**/*", "./src/**/**/**/*" ],
        "keyframes": true,
        "fontFace": true
      }
    ],
    [
      "postcss-preset-env",
      {
        "autoprefixer": {
          "flexbox": "no-2009",
          "grid": "autoplace"
        },
        "stage": 3,
        "features": {
          "custom-properties": false
        }
      }
    ]
  ]
}